<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_deck_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/custom_deck_reorder_layout"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/ic_expand_less_black_24dp"-->
            <!--android:clickable="false" />-->


            <TextView
                android:id="@+id/custom_deck_item_reorder_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="01"
                android:textColor="@color/textPrimary"
                android:textSize="20sp" />


        </LinearLayout>

        <!--<LinearLayout-->
        <!--android:id="@+id/custom_deck_down_layout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_weight="1"-->
        <!--android:clickable="true">-->

        <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center"-->
        <!--android:background="@drawable/ic_expand_more_black_24dp"-->
        <!--android:clickable="false"-->
        <!--android:gravity="center" />-->
        <!--</LinearLayout>-->


    </LinearLayout>

    <TextView
        android:id="@+id/custom_deck_item_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.70"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:padding="5dp"
        android:textColor="@color/textPrimary"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginStart="3dp"
        android:gravity="right">

        <TextView
            android:id="@+id/custom_deck_item_nb_cards_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:lines="1"
            android:text=" Cards"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_deck_option_layout"
        android:layout_width="30dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:gravity="center|right">

        <Button
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:alpha="0.5"
            android:background="@drawable/ic_more_vert_black_24dp"
            android:clickable="false" />

    </LinearLayout>


</LinearLayout>

