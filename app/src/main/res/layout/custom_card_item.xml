<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_card_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/checkbox_layout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <CheckBox
            android:id="@+id/custom_card_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="9"
        android:gravity="center|left"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_card_item_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:text="Question"
            android:textColor="@color/textPrimary"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/custom_card_item_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:text="Answer"
            android:textColor="@color/textPrimary"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_card_item_nb_decks_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:layout_marginStart="3dp">

        <TextView

            android:id="@+id/custom_card_item_nb_decks_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="0000 Decks"
            android:textSize="15dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/custom_card_option_layout"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:gravity="center|right"
        android:layout_gravity="center"
        android:clickable="true"
        android:background="?selectableItemBackgroundBorderless">

        <Button
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:clickable="false"
            android:background="@drawable/ic_more_vert_black_24dp"/>

    </LinearLayout>


</LinearLayout>