<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/another_card_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:orientation="horizontal">


                    <CheckBox
                        android:id="@+id/another_card_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/create_another_card_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="create another card"
                        android:textColor="@color/textPrimary" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_of_decks_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_info" />

                    <TextView
                        android:id="@+id/number_of_decks_text_view_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Deck(s)"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/text_info" />

                    <Button
                        android:id="@+id/deck_info_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/custom_button_selector"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:onClick="deckInfoButtonClicked"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="EDIT"
                        android:textColor="@color/colorTextIcon" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:textSize="@dimen/text_info">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Question"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/word_info_header" />

                    <EditText
                        android:id="@+id/question_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoComplete"
                        android:maxLines="1"
                        android:textColor="@color/textPrimary"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_info" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Answer"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/word_info_header" />

                    <EditText
                        android:id="@+id/answer_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textAutoComplete"
                        android:maxLines="1"
                        android:textColor="@color/textPrimary"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_info" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:textColor="@color/textPrimary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Note"
                        android:textColor="@color/textPrimary"
                        android:textSize="@dimen/word_info_header" />

                    <EditText
                        android:id="@+id/note_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top|left"
                        android:inputType="textMultiLine"
                        android:maxLines="7"
                        android:minLines="7"
                        android:scrollbars="vertical"
                        android:textColor="@color/textPrimary"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/text_info" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

