<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/progressbarNeutral"
                android:centerY="0.75"
                android:endColor="@color/progressbarNeutral"
                android:startColor="@color/progressbarNeutral" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />


                <gradient
                    android:angle="270"
                    android:centerColor="@color/progressbarFail"
                    android:centerY="0.75"
                    android:endColor="@color/progressbarFail"
                    android:startColor="@color/progressbarFail" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:endColor="@color/progressbarPass"
                    android:startColor="@color/progressbarPass" />
            </shape>
        </clip>
    </item>
</layer-list>